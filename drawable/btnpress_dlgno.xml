<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid
                android:color="@color/red_100"/>
            <corners
                android:radius="30dp" />
            <stroke
                android:width="2dp"
                android:color="@color/red_400" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid
                android:color="@color/red_300"/>
            <corners
                android:radius="30dp" />
            <stroke
                android:width="3dp"
                android:color="@color/grey_200" />
        </shape>
    </item>
</selector>
